@model ExpenseTracker.Models.ViewModels.ExpenseViewModels.ExpenseCreateEditViewModel

<div class="container my-4">
    <h2 class="text-primary text-center mb-4">Add Expense</h2>

    <div class="card shadow-lg mb-4" style="max-width: 600px; margin: 0 auto;">
        <div class="card-header bg-gradient-primary text-center">
            <h5 class="mb-0">Enter Your Expense Details</h5>
            <p class="small mt-2">Stay on top of your finances by adding your expenses.</p>
        </div>
        <div class="card-body px-4 py-3">
            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control form-control-lg" placeholder="Enter expense description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Amount" class="form-label">Amount <span class="text-danger">*</span></label>
                    <input asp-for="Amount" class="form-control form-control-lg" placeholder="Enter expense amount" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Category" class="form-label">Category <span class="text-danger">*</span></label>
                    <select asp-for="Category"
                            class="form-select form-select-lg"
                            asp-items="@(new SelectList(Model.Categories, "Value", "Text"))">
                        <option value="">Select a Category</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Date" class="form-label">Date <span class="text-danger">*</span></label>
                    <input asp-for="Date" type="date" class="form-control form-control-lg" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary btn-lg px-4 py-2 shadow-sm">
                        <i class="bi bi-save me-2"></i> Save Expense
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
