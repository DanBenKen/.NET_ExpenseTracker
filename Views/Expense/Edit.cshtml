@model ExpenseTracker.Models.ViewModels.ExpenseViewModels.ExpenseCreateEditViewModel

@{
    ViewData["Title"] = "Edit Expense";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-info text-dark text-center">
                    <h4 class="mb-0">Edit Expense</h4>
                    <p class="text-dark-70">Update your expense details easily</p>
                </div>
                <div class="card-body px-4 pt-3 animate__animated animate__fadeIn">
                    <form asp-action="Edit" asp-controller="Expense" method="post">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                            <input asp-for="Description" class="form-control" placeholder="Enter expense description" />
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Amount <span class="text-danger">*</span></label>
                            <input asp-for="Amount" class="form-control" placeholder="Enter amount spent" />
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Date" class="form-label">Date</label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Category</label>
                            <select asp-for="Category"
                                    class="form-select bg-light"
                                    asp-items="@(new SelectList(Model.Categories, "Value", "Text"))">
                                <option value="">Select a Category</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between mt-3">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-save me-2"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">
                                <i class="bi bi-arrow-left me-2"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
