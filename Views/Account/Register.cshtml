@model ExpenseTracker.Models.ViewModels.AccountViewModels.RegisterViewModel

<div class="container d-flex align-items-center justify-content-center mt-5">
    <div class="card shadow-lg p-4 rounded-3" style="width: 100%; max-width: 500px;">
        <div class="text-center mb-4">
            <h2 class="text-success">Create an Account</h2>
            <p class="text-muted">Join us and track your expenses effortlessly</p>
        </div>
        <form asp-action="Register" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success btn-lg">Register</button>
            </div>

            <div class="text-center mb-2">
                <span>Already have an account? <a asp-action="Login" class="text-primary">Login here</a></span>
            </div>
        </form>
    </div>
</div>
