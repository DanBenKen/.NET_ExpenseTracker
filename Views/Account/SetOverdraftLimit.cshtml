@model ExpenseTracker.Models.ViewModels.AccountViewModels.SetOverdraftLimitViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-info text-dark text-center">
                    <h4 class="mb-0">Set Allowed Overdraft Limit</h4>
                    <p class="text-dark-70">Define how much you can overdraft on your account.</p>
                </div>
                <div class="card-body px-4 pt-3">
                    <form asp-action="SetOverdraftLimit" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="AllowedOverdraftLimit" class="form-label">Allowed Overdraft Limit</label>
                            <input asp-for="AllowedOverdraftLimit"
                                   class="form-control"
                                   placeholder="Enter allowed overdraft amount" />
                            <span asp-validation-for="AllowedOverdraftLimit" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg shadow-sm">
                                <i class="bi bi-save me-2"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
