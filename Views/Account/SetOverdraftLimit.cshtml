@model ExpenseTracker.Models.ViewModels.AccountViewModels.SetOverdraftLimitViewModel

<div class="container d-flex align-items-center justify-content-center mt-5">
    <div class="card shadow-lg p-4 rounded-3" style="width: 100%; max-width: 500px;">
        <div class="card-header bg-success text-white text-center py-3">
            <h4 class="mb-0">Set Allowed Overdraft Limit</h4>
            <p class="text-light">Define how much you can overdraft on your account.</p>
        </div>
        <div class="card-body px-4 pt-3 animate__animated animate__fadeIn">
            <form asp-action="SetOverdraftLimit" method="post">
                <div class="mb-3">
                    <label asp-for="AllowedOverdraftLimit" class="form-label">Allowed Overdraft Limit</label>
                    <input asp-for="AllowedOverdraftLimit"
                           class="form-control"
                           type="number"
                           placeholder="Enter allowed overdraft amount" />
                    <span asp-validation-for="AllowedOverdraftLimit" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm d-flex align-items-center">
                        <i class="bi bi-save me-2"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm d-flex align-items-center">
                        <i class="bi bi-arrow-left me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>